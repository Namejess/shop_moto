{% extends 'base.html.twig' %}

{% block title %}Motos{% endblock %}

{% block body %}
    <h1>Motos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ moto.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ moto.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ moto.Description }}</td>
            </tr>
            <tr>
                <th>Kilometrage</th>
                <td>{{ moto.Kilometrage }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ moto.Prix }}</td>
            </tr>
            <tr>
                <th>DateImmat</th>
                <td>{{ moto.DateImmat ? moto.DateImmat|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Puissance</th>
                <td>{{ moto.Puissance }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_motos_index') }}">back to list</a>

    <a href="{{ path('app_motos_edit', {'id': moto.id}) }}">edit</a>

    {{ include('motos/_delete_form.html.twig') }}
{% endblock %}
